
@model IEnumerable<Order>


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>UserId</th>
                <th>Product</th>
                <th>Price</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserId</td>
                    <td>@order.Product</td>
                    <td>@order.Price</td>
                    <td>@order.Address</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
   
</div>
